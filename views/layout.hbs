    <script type="text/template" id="item-home">
      <div class="container">
        <div class="row">
          <div class="seven columns centered">
            <div class="row collapse">
              <div class="ten mobile-three columns">
                <input type="text" placeholder="Search by Course Code or Course Name" />
              </div>
              <div class="two mobile-one columns">
                <a class="button expand postfix">Search</a>
              </div>
            </div>
            <a href="#!/search/">Advanced Search</a>
          </div>
        </div>
        <br/>
        <br/>
        <div class="row">
          <div class="six columns panel centered">
            <h4 class="subheader">Top Rated Courses</h4>
            <ul class="disc">
              <li><a href="#">ECSE 428 - Software Engineering Practice</a></li>
              <li><a href="#">ECSE 323 - Digital System Design</a></li>
              <li><a href="#">SOCI 209 - Anthropology of Religion</a></li>
            </ul>
          </div>
        </div>
      </div>
    </script>

    <script type="text/template" id="item-login">
      <div class="container">
        <div class="four columns centered">
          <form class="form-signin">
            <h2 class="subheader">Please sign in</h2>
            <input type="text" class="input-block-level" placeholder="Username">
            <input type="password" class="input-block-level" placeholder="Password">
            <button class="button" type="submit">Sign in</button>
            <p>
              <a href="/#/forgot">Forgot Password</a>
              <br/>
              <a href="/#!/register">Register</a>
            </p>
          </form>
        </div>
      </div>
    </script>

    <script type="text/template" id="item-register">
      <div class="row">
        <div class="six columns centered">
          <h2 class="subheader">Register</h2>
          <form>
            <fieldset>
              <div class="row">

                  <div class="row">
                    <div class="six columns">
                      <input type="text" placeholder="First Name" />
                    </div>
                    <div class="six columns">
                      <input type="text" placeholder="Last Name" />
                    </div>
                  </div>

                  <input type="text" placeholder="Email">

                  <input type="text" placeholder="Username">

                  <input type="text" placeholder="Password">
                  <input type="text" placeholder="Retype Password">
              </div>
            </fieldset>
            <span>By clicking to register you agree to the <a href="#!/terms">terms of agreement</a></span><br><br>
            <button class="button" type="submit">Register</button>
            <a href="/" class="button" type="submit">Cancel</a>
          </form>
        </div>
      </div>
    </script>
  </head>

